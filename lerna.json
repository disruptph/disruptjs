{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": ["*.md"]
    },
    "version": {
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "message": "chore(release): publish"
    }
  }
}
