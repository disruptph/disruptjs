{
  "name": "disruptjs",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "build": "lerna run build",
    "build:watch": "lerna run --parallel build:watch",
    "bootstrap": "lerna bootstrap && yarn run build",
    "publish:dryrun": "lerna version --conventional-commits --yes --no-git-tag-version --no-push --allowBranch",
    "publish": "lerna publish --conventional-commits --yes"
  }
}
